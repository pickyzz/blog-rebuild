# Env variables for development/production (example template)
# Remove comments and fill values in your local .env or in the deployment provider (Vercel/GitHub Actions)

# General
NODE_ENV=development

# Notion integration - REQUIRED
# Create an integration in Notion and copy the internal integration token
NOTION_KEY=YOUR_NOTION_INTEGRATION_TOKEN
# The Notion Database ID containing your posts
DATABASE_ID=YOUR_NOTION_DATABASE_ID

# API Security (recommended for protected endpoints)
# Secret key for API authentication (used by cache refresh endpoints)
API_SECRET_KEY=GENERATE_A_RANDOM_32_CHAR_SECRET

# Cache and refresh settings (milliseconds)
# POSTS_CACHE_TTL default in development: 30000 (30s). Override in production as needed.
POSTS_CACHE_TTL=30000

# Optional: control cache TTLs for tags/posts lookups
TAGS_CACHE_TTL=600000
POST_BY_SLUG_NEW_CACHE_TTL=120000
POST_BY_SLUG_OLD_CACHE_TTL=900000
POSTS_BY_TAG=300000

# Webhook and scheduled refresh secrets (only if you enable those endpoints)
WEBHOOK_SECRET=GENERATE_A_RANDOM_WEBHOOK_SECRET
SCHEDULED_REFRESH_KEY=GENERATE_A_RANDOM_SCHEDULED_KEY

