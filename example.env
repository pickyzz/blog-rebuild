# env variables production/development
NODE_ENV=development
NOTION_KEY='secret_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX' # https://www.notion.so/my-integrations
DATABASE_ID='XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX' # Notion database ID

# API Security
# Secret key for API authentication (used by cache refresh endpoints)
API_SECRET_KEY='your_secure_api_key_here_generate_random_32_chars'

# Cache and refresh settings
# POSTS_CACHE_TTL in milliseconds (dev default 30000 = 30s). Override in production as needed.
POSTS_CACHE_TTL=30000

# Optional secrets for cache refresh endpoints
# Set a secret to protect webhook refresh endpoint
WEBHOOK_SECRET='your_webhook_secret_here'
# API key for scheduled refresh endpoint
SCHEDULED_REFRESH_KEY='your_scheduled_refresh_key_here'

