{
  "name": "pickyzz-blog-rebuild",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pickyzz/pickyzz.dev.git"
  },
  "author": {
    "name": "pickyzz",
    "email": "contact@pickyzz.dev",
    "url": "http://pickyzz.dev"
  },
  "scripts": {
    "dev": "astro check --watch & astro dev",
    "start": "astro dev",
    "build": "astro build && jampack ./dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "clean": "rimraf dist",
    "format:check": "prettier --plugin-search-dir=. --check .",
    "format": "prettier --plugin-search-dir=. --write .",
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint .",
    "commitlint": "npx commitlint --from HEAD~1 --to HEAD --verbose",
    "newpost": "npx ts-node-esm src/scripts/createPost.ts",
    "fastpost": "npx ts-node-esm src/scripts/createPost.ts -y"
  },
  "devDependencies": {
    "@astrojs/mdx": "0.19.2",
    "@astrojs/prefetch": "0.2.2",
    "@astrojs/react": "2.2.0",
    "@astrojs/rss": "2.4.2",
    "@astrojs/sitemap": "1.3.1",
    "@astrojs/tailwind": "3.1.3",
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@divriots/jampack": "0.11.4",
    "@resvg/resvg-js": "2.4.1",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/line-clamp": "0.4.4",
    "@tailwindcss/typography": "0.5.9",
    "@types/github-slugger": "1.3.0",
    "@types/prompts": "2.4.4",
    "@types/react": "18.2.6",
    "@typescript-eslint/parser": "5.59.6",
    "astro": "2.5.0",
    "astro-eslint-parser": "0.14.0",
    "astro-robots-txt": "0.5.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "daisyui": "2.51.6",
    "eslint": "8.40.0",
    "eslint-plugin-astro": "0.27.0",
    "fuse.js": "6.6.2",
    "github-slugger": "2.0.0",
    "husky": "8.0.3",
    "kleur": "4.1.5",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "prompts": "2.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-external-links": "2.1.0",
    "remark-collapse": "0.1.2",
    "remark-toc": "8.0.1",
    "satori": "0.8.1",
    "tailwindcss": "3.3.2",
    "ts-node": "10.9.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{.js,.jsx,.ts,.tsx,.astro}": [
      "prettier --plugin-search-dir=. --write"
    ]
  }
}
