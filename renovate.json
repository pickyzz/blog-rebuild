{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "rangeStrategy": "pin",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "ignoreDeps": [],
  "timezone": "Asia/Bangkok"
}