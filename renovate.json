{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enableVulnerabilityAlertsWithLabel('security')"
  ],
  "baseBranchPatterns": ["main"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "platformAutomerge": true,
  "ignoreDeps": [],
  "timezone": "Asia/Bangkok"
}
