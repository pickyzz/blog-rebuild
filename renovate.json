{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "ignoreDeps": [
    "next",
    "@next/bundle-analyzer",
    "eslint-config-next",
    "react",
    "react-dom"
  ],
  "schedule": ["after 6pm"],
  "timezone": "Asia/Bangkok"
}
