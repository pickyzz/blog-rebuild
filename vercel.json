{
  "headers": [
    {
      "source": "/:all*.(js|css|svg|png|jpg|jpeg|webp|ico|webmanifest)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=7200, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=7200" },
        { "key": "CDN-Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=7200" }
      ]
    },
    {
      "source": "/blog",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300, stale-while-revalidate=600, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=300, stale-while-revalidate=600" },
        { "key": "CDN-Cache-Control", "value": "public, max-age=300, stale-while-revalidate=600" }
      ]
    },
    {
      "source": "/blog/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=1800, stale-while-revalidate=3600, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=1800, stale-while-revalidate=3600" },
        { "key": "CDN-Cache-Control", "value": "public, max-age=1800, stale-while-revalidate=3600" }
      ]
    },
    {
      "source": "/tags/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=900, stale-while-revalidate=1800, must-revalidate" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=900, stale-while-revalidate=1800" },
        { "key": "CDN-Cache-Control", "value": "public, max-age=900, stale-while-revalidate=1800" }
      ]
    },
    {
      "source": "/about",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, stale-while-revalidate=172800" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=86400, stale-while-revalidate=172800" }
      ]
    },
    {
      "source": "/api/image/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=1800, s-maxage=7200, stale-while-revalidate=3600" },
        { "key": "Vercel-CDN-Cache-Control", "value": "public, max-age=1800, s-maxage=7200, stale-while-revalidate=3600" }
      ]
    },
    {
      "source": "/:all*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60, stale-while-revalidate=120" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-DNS-Prefetch-Control", "value": "on" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/scheduled/revalidate",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/scheduled/revalidate",
      "schedule": "0 12 * * *"
    }
  ],

  "regions": ["sin1"],
  "framework": "astro"
}
