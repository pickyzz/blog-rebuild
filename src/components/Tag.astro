---
import IconHash from "@/assets/icons/IconHash.svg";

export interface Props {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
}

const { tag, tagName, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={`/tags/${tag}`}
    transition:name={tag}
    class:list={[
      "group-hover:text-accent relative pr-2 text-lg underline decoration-dashed focus-visible:p-1 group-hover:-top-0.5",
      { "text-sm": size === "sm" },
    ]}
  >
    <IconHash
      class:list={[
        "inline-block opacity-80",
        { "-mr-2 size-4": size === "sm" },
        { "-mr-3 size-6": size === "lg" },
      ]}
    />
    <span class="ml-1">{tagName}</span>
  </a>
</li>
