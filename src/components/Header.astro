---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSun from "@/assets/icons/IconSun.svg";
import IconAuto from "@/assets/icons/IconAuto.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute -top-full left-16 z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="header-glass fixed left-1/2 top-4 z-50 w-[95%] max-w-4xl -translate-x-1/2 transform rounded-2xl"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between p-4 sm:items-center sm:py-6"
    >
      <a
        href="/"
        class="absolute whitespace-nowrap py-1 text-2xl font-semibold leading-7 sm:static"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <button
          id="menu-btn"
          class="focus-outline self-end p-2 sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:ml-0 sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a
              href="/blog"
              class:list={[
                "hover:text-accent",
                { "active-nav": isActive("/blog") },
              ]}
            >
              Posts
            </a>
          </li>
          <li class="col-span-2">
            <a
              href="/tags"
              class:list={[
                "hover:text-accent",
                { "active-nav": isActive("/tags") },
              ]}
            >
              Tags
            </a>
          </li>
          <li class="col-span-2">
            <a
              href="/about"
              class:list={[
                "hover:text-accent",
                { "active-nav": isActive("/about") },
              ]}
            >
              About
            </a>
          </li>
          <li class="col-span-2">
            <a
              href="/search"
              class:list={[
                "hover:text-accent",
                { "active-nav": isActive("/search") },
              ]}
            >
              Search
            </a>
          </li>
          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href="/archives"
                  class:list={[
                    "focus-outline flex justify-center p-3 transition-transform duration-200 hover:rotate-6 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                    },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="hidden h-6 w-6 sm:inline-block" />
                  <span class="sm:sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-2 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline flex justify-center p-3 transition-all duration-200 hover:rotate-6 sm:p-1 hover:[&>div]:text-accent"
                  title="Toggles light, dark & auto"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <div class="relative h-6 w-6 text-foreground transition-all duration-200">
                    <IconMoon
                      id="moon-icon"
                      class="absolute inset-0 h-6 w-6 transition-opacity duration-300 ease-in-out"
                    />
                    <IconSun
                      id="sun-icon"
                      class="absolute inset-0 h-6 w-6 transition-opacity duration-300 ease-in-out"
                    />
                    <IconAuto
                      id="auto-icon"
                      class="absolute inset-0 h-6 w-6 transition-opacity duration-300 ease-in-out"
                    />
                  </div>
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  /* Header glassmorphism using CSS variables */
  .header-glass {
    background-color: color-mix(in srgb, var(--background) 70%, transparent);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--border);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }
  
  :global(html[data-theme="dark"]) .header-glass {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");

    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
