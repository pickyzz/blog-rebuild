---
import Layout from "@layouts/Layout.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@config";

import { Image } from "astro:assets";
import profileImage from "@assets/images/profile.jpg";
import fccImage1 from "@assets/images/fcc-cert-1.png";
import fccImage2 from "@assets/images/fcc-cert-2.png";
import fccImage3 from "@assets/images/fcc-cert-3.png";
---

<Layout title={`About | ${SITE.title}`}>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section
      id="about"
      class="prose mb-28 prose-img:border-0 max-w-[80vw] md:max-w-4xl mx-auto"
    >
      <!-- <h1 class="text-2xl tracking-wider sm:text-3xl">About me</h1> -->

      <div class="my-12 grid grid-flow-cols-1 md:grid-cols-2 gap-2">
        <Image
          class="mask mask-squircle h-auto w-[80%] text-center"
          src={profileImage}
          alt="Avatar image"
          loading="eager"
        />
        <div>
          <p class="mb-4 mt-2 text-3xl font-bold">Parinya T.</p>
          <p class="my-2">
            Bachelor’s of Science degree (B. Sc.) KMUTNB, Thailand
          </p>
          <p class="my-1">
            <span class="font-bold">Location</span> : Thailand
          </p>
          <p class="my-1">
            <span class="font-bold">Timezone</span> : Asia/Bangkok (GMT+7)
          </p>
          <p class="my-1">
            <span class="font-bold">Language</span> : TH, EN
          </p>
          <p class="my-1">
            <span class="font-bold">Date of birth</span> : 30 - 09 - 1993
          </p>
          <p class="my-1">
            <span class="font-bold">E-mail</span> :{" "}
            <a
              href="mailto:contact@pickyzz.dev"
              target="_blank"
              rel="noreferrer"
            >
              contact@pickyzz.dev
            </a>
          </p>
          <p class="my-1">
            <span class="font-bold">Twitter</span> :{" "}
            <a
              href="https://twitter.com/p1ckyzz"
              target="_blank"
              rel="noreferrer"
            >
              @p1ckyzz
            </a>
          </p>
          <p class="my-1">
            <span class="font-bold">Github</span> :{" "}
            <a
              href="https://github.com/pickyzz"
              target="_blank"
              rel="noreferrer"
            >
              github.com/pickyzz
            </a>
          </p>
          <p class="my-1">
            <span class="font-bold">FCC</span> :{" "}
            <a
              href="https://freecodecamp.org/pickyzz"
              target="_blank"
              rel="noreferrer"
            >
              freecodecamp.org/pickyzz
            </a>
          </p>
          <div class="my-4">
            <p class="text-2xl font-bold">Dev Stacks</p>
            <p class="-mt-4">
              Lua, HTML, CSS, JavaScript, TypeScript, React, NextJs, Tailwind,
              Astro, Svelte
            </p>
          </div>
        </div>
      </div>

      <div class="-my-4 flex justify-center">
        <div class="carousel w-[90%] md:w-[80%] max-h-[400px]">
          <div id="slide1" class="carousel-item relative w-full">
            <Image src={fccImage1} class="w-full" alt="" />
            <div
              class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between"
            >
              <a href="#slide3" class="btn btn-circle">❮</a>
              <a href="#slide2" class="btn btn-circle">❯</a>
            </div>
          </div>
          <div id="slide2" class="carousel-item relative w-full">
            <Image src={fccImage2} class="w-full" alt="" />
            <div
              class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between"
            >
              <a href="#slide1" class="btn btn-circle">❮</a>
              <a href="#slide3" class="btn btn-circle">❯</a>
            </div>
          </div>
          <div id="slide3" class="carousel-item relative w-full">
            <Image src={fccImage3} class="w-full" alt="" />
            <div
              class="absolute left-5 right-5 top-1/2 flex -translate-y-1/2 transform justify-between"
            >
              <a href="#slide2" class="btn btn-circle">❮</a>
              <a href="#slide1" class="btn btn-circle">❯</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
