---
import Layout from "@/layouts/Layout.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";

export const prerender = true;
---

<Layout title={`About | ${SITE.title}`}>
  <Header activeNav="about" />
  <Breadcrumb />
  <main id="main-content">
    <section class="mx-auto mb-28 max-w-[80vw] md:max-w-4xl">
      <div class="my-12 grid grid-cols-1 items-center gap-4 md:grid-cols-2">
        <img
          class="mx-auto w-3/5 rounded-full shadow-lg"
          src="/images/static/profile.jpg"
          alt="Avatar image"
          loading="eager"
        />
        <div>
          <p class="mb-4 mt-2 text-3xl font-bold">Parinya T.</p>
          <p class="my-2">
            Bachelorâ€™s of Science degree (B. Sc.) KMUTNB, Thailand
          </p>
          <p class="my-1 font-semibold">
            Location: <span class="font-normal">Thailand</span>
          </p>
          <p class="my-1 font-semibold">
            Timezone: <span class="font-normal">Asia/Bangkok (GMT+7)</span>
          </p>
          <p class="my-1 font-semibold">
            Language: <span class="font-normal">TH, EN</span>
          </p>
          <p class="my-1 font-semibold">
            Date of birth: <span class="font-normal">30 - 09 - 1993</span>
          </p>
          <p class="my-1 font-semibold">
            E-mail: <a
              href="mailto:contact@pickyzz.dev"
              class="text-blue-500 hover:underline">contact@pickyzz.dev</a
            >
          </p>
          <p class="my-1 font-semibold">
            Twitter: <a
              href="https://twitter.com/p1ckyzz"
              class="text-blue-500 hover:underline">@p1ckyzz</a
            >
          </p>
          <p class="my-1 font-semibold">
            Github: <a
              href="https://github.com/pickyzz"
              class="text-blue-500 hover:underline">github.com/pickyzz</a
            >
          </p>
          <p class="my-1 font-semibold">
            FCC: <a
              href="https://freecodecamp.org/pickyzz"
              class="text-blue-500 hover:underline">freecodecamp.org/pickyzz</a
            >
          </p>
          <div class="my-4">
            <h3 class="mb-3 text-2xl font-bold">Dev Stacks</h3>
            <div class="flex flex-wrap gap-2">
              {
                [
                  "Lua", "HTML", "CSS", "JavaScript", "TypeScript", 
                  "React", "NextJs", "Tailwind", "Astro", "Svelte"
                ].map((tech) => (
                  <span class="rounded-full border border-accent/20 bg-accent/5 px-3 py-1 text-sm font-medium text-accent backdrop-blur-sm transition-all duration-300 hover:bg-accent hover:text-white hover:scale-105 hover:shadow-sm cursor-default">
                    {tech}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
      <div class="mt-8 flex w-full flex-col items-center py-10">
        <h3 class="mb-8 text-2xl font-bold">Certificates</h3>
        
        <!-- Infinite Scroll Container -->
        <div class="group relative flex w-full overflow-hidden bg-background/50 py-4 [mask-image:linear-gradient(to_right,transparent,black_10%,black_90%,transparent)]">
          <div class="flex animate-infinite-scroll group-hover:paused gap-8 w-max">
            {/* First Set of Images */}
            {
              [
                "/images/static/fcc-cert-1.png",
                "/images/static/fcc-cert-2.png",
                "/images/static/fcc-cert-3.png"
              ].map((src, index) => (
                <div class="relative w-[300px] sm:w-[500px] flex-shrink-0">
                  <img
                    src={src}
                    class="h-auto w-full border border-border/50 rounded-lg shadow-md transition-transform duration-300 hover:scale-105"
                    alt={`Certificate ${index + 1}`}
                    loading="lazy"
                  />
                </div>
              ))
            }
            {/* Duplicate Set for Seamless Loop */}
            {
              [
                "/images/static/fcc-cert-1.png",
                "/images/static/fcc-cert-2.png",
                "/images/static/fcc-cert-3.png"
              ].map((src, index) => (
                <div class="relative w-[300px] sm:w-[500px] flex-shrink-0" aria-hidden="true">
                  <img
                    src={src}
                    class="h-auto w-full border border-border/50 rounded-lg shadow-md transition-transform duration-300 hover:scale-105"
                    alt={`Certificate ${index + 1} (Duplicate)`}
                    loading="lazy"
                  />
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <style>
        /* Define custom keyframe for infinite scroll */
        @keyframes infinite-scroll {
          from {
            transform: translateX(0);
          }
          to {
            transform: translateX(-50%);
          }
        }
        
        .animate-infinite-scroll {
          animation: infinite-scroll 20s linear infinite;
        }
        
        /* Pause animation on hover */
        .group:hover .animate-infinite-scroll {
          animation-play-state: paused;
        }
      </style>
    </section>
  </main>
  <Footer />
</Layout>
