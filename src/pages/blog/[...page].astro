---
import { SITE } from "@/config";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import type { GetStaticPaths } from "astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { getNotionPosts } from "@/utils/getNotionPosts";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getNotionPosts();
  const publishedPosts = posts.filter(post => !post.data.draft);
  return paginate(getSortedPosts(publishedPosts), { pageSize: SITE.postPerPage });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<Layout title={`Posts | ${SITE.title}`}>
  <Header />
  <Main pageTitle="Posts" pageDesc="All the articles I've posted.">
    <ul
      class="mx-auto grid max-w-[80vw] grid-cols-1 gap-8 md:max-w-4xl md:grid-cols-2"
    >
      {
        page.data.map(({ data, id }) => (
          <Card href={`/blog/${data.slug}`} frontmatter={data} />
        ))
      }
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} />
</Layout>
